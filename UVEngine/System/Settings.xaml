                        </ListBoxItem>
                        <ListBoxItem>
                            <StackPanel Margin="0,0,0,0">
                                <CheckBox x:Name="audioBackground" Checked="Checked" Unchecked="UnChecked" Content="开启后台音频播放"/>

                            </StackPanel>
